<h1>Resource <%= @resource.name %></h1>

<%= model_field('name', "Name", @resource.name) %>
<%= model_field('short_name', "Short Name", @resource.short_name) %>
<%= model_field('description', "Description", @resource.description) %>
<%= model_field('documentation', "Documentation", @resource.documentation) %>
<%= model_field('module', "Module", @resource.module) %>

<%= model_link "Build Per User FLEXlm Usage Report", new_resource_resource_user_report_path(@resource.id) %>
